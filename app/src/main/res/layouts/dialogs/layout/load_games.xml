<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nameToLoadTitle"
        style="@style/DialogTitleTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name_to_load_title"/>
    <TextView
        android:id="@+id/nameToLoadBody"
        style="@style/DialogBodyTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name_to_load_body"/>
    <Spinner
        android:id="@+id/loadSpinner"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <include layout="@layout/dialog_2_buttons_template"/>

</LinearLayout>