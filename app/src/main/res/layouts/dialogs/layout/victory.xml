<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/victoryTitle"
        style="@style/DialogTitleTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/victory_title"/>

    <TextView
        android:id="@+id/victoryBody"
        style="@style/DialogBodyTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/victory_body"/>

    <include layout="@layout/dialog_2_buttons_layout"/>

</LinearLayout>