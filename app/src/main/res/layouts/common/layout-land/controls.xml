<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/controlsLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/numbersLayout"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center">

            <TableRow
                android:layout_height="34dp"
                android:layout_width="160dp"
                android:gravity="center">
                <Button
                    android:id="@+id/n1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/controlButtonWidth"
                    android:layout_height="@dimen/controlButtonHeight"
                    android:background="@drawable/controls_corners"
                    android:text="@string/number1"
                    android:tag="@string/number1"
                    android:textColor="@color/lightBlack"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/n2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/controlButtonWidth"
                    android:layout_height="@dimen/controlButtonHeight"
                    android:background="@drawable/controls_horizontal"
                    android:tag="@string/number2"
                    android:text="@string/number2"
                    android:textColor="@color/lightBlack"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/n3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/controlButtonWidth"
                    android:layout_height="@dimen/controlButtonHeight"
                    android:background="@drawable/controls_corners"
                    android:text="@string/number3"
                    android:tag="@string/number3"
                    android:textColor="@color/lightBlack"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_height="34dp"
                android:layout_width="160dp"
                android:gravity="center">

                <Button
                    android:id="@+id/n4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/controlButtonWidth"
                    android:layout_height="@dimen/controlButtonHeight"
                    android:background="@drawable/controls_vertical"
                    android:tag="@string/number4"
                    android:text="@string/number4"
                    android:textColor="@color/lightBlack"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/n5"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/controlButtonWidth"
                    android:layout_height="@dimen/controlButtonHeight"
                    android:background="@drawable/controls_middle"
                    android:text="@string/number5"
                    android:tag="@string/number5"
                    android:textColor="@color/lightBlack"
                    android:textSize="16sp" />
                <Button
                    android:id="@+id/n6"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/controlButtonWidth"
                    android:layout_height="@dimen/controlButtonHeight"
                    android:background="@drawable/controls_vertical"
                    android:tag="@string/number6"
                    android:text="@string/number6"
                    android:textColor="@color/lightBlack"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:layout_height="34dp"
                android:layout_width="160dp"
                android:gravity="center">

                <Button
                    android:id="@+id/n7"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/controlButtonWidth"
                    android:layout_height="@dimen/controlButtonHeight"
                    android:background="@drawable/controls_corners"
                    android:tag="@string/number7"
                    android:text="@string/number7"
                    android:textColor="@color/lightBlack"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/n8"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/controlButtonWidth"
                    android:layout_height="@dimen/controlButtonHeight"
                    android:background="@drawable/controls_horizontal"
                    android:tag="@string/number8"
                    android:text="@string/number8"
                    android:textColor="@color/lightBlack"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/n9"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/controlButtonWidth"
                    android:layout_height="@dimen/controlButtonHeight"
                    android:background="@drawable/controls_corners"
                    android:tag="@string/number9"
                    android:text="@string/number9"
                    android:textColor="@color/lightBlack"
                    android:textSize="16sp" />
            </TableRow>
    </TableLayout>

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/revert"
        android:tag="revert"
        android:layout_toEndOf="@+id/numbersLayout"
        android:layout_width="46dp"
        android:layout_height="46dp"

        android:background="@drawable/revert"/>

    <RelativeLayout
        android:id="@+id/hintLayout"
        android:tag="hint"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="46dp"

        android:layout_toEndOf="@+id/numbersLayout"
        android:layout_alignBottom="@+id/numbersLayout"
        android:layout_height="46dp">

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/hintButton"
            android:tag="hint"
            android:layout_centerInParent="true"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/hint" />
        <TextView
            android:id="@+id/hintTextView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:text="@string/number_of_hints"/>
    </RelativeLayout>

</RelativeLayout>