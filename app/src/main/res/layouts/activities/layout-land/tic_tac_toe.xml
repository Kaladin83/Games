<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="30dp"
    android:paddingTop="30dp"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_toStartOf="@+id/tiTacToeBoard"
        android:layout_alignTop="@+id/tiTacToeBoard"
        android:id="@+id/aiChoiceLayout"
        android:gravity="center"
        android:paddingTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/compRadio"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:checked="true"
            android:text="@string/comp_player" />

        <RadioButton
            android:id="@+id/humanRadio"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/human_player" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_toStartOf="@+id/tiTacToeBoard"
        android:layout_below="@+id/aiChoiceLayout"
        android:id="@+id/signChoiceLayout"
        android:gravity="center"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/xRadio"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/x_sign" />

        <RadioButton
            android:id="@+id/oRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/o_sign" />
    </RadioGroup>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:id="@+id/tiTacToeBoard">

        <TableRow android:gravity="center">
            <Button
                android:id="@+id/b00"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/TicTacToeButton"/>

            <Button
                android:id="@+id/b01"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/TicTacToeButton"/>

            <Button
                android:id="@+id/b02"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/TicTacToeButton"/>
        </TableRow>

        <TableRow android:gravity="center">
            <Button
                android:id="@+id/b10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/TicTacToeButton"/>

            <Button
                android:id="@+id/b11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/TicTacToeButton"/>

            <Button
                android:id="@+id/b12"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/TicTacToeButton"/>
        </TableRow>

        <TableRow android:gravity="center">
            <Button
                android:id="@+id/b20"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/TicTacToeButton"/>

            <Button
                android:id="@+id/b21"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/TicTacToeButton"/>

            <Button
                android:id="@+id/b22"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/TicTacToeButton"/>
        </TableRow>
    </TableLayout>

    <include
        layout="@layout/time_and_menu"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_toStartOf="@+id/tiTacToeBoard"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="22dp" />
</RelativeLayout>
