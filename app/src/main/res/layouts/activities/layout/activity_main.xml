<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_columnWeight="2"
    android:layout_rowWeight="1"
    tools:context="com.example.maratbe.other.MainActivity">

    <TableRow android:layout_marginBottom="20dp" android:layout_height="wrap_content" android:gravity="center">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="130dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="130dp">

            <ImageButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/ticTacToeBtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@color/blue"
                android:text="@string/tic_tac_toe"
                android:textAllCaps="false"
                android:textSize="@dimen/buttonTextSizeLarge" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/sudokuBtn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/sudoku"
                android:textAllCaps="false"
                android:textSize="@dimen/buttonTextSizeLarge" />
        </androidx.cardview.widget.CardView>
    </TableRow>

    <TableRow android:layout_height="wrap_content" android:gravity="center">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="130dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="130dp">

            <ImageButton
                android:id="@+id/kakuroBtn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/kakuro"
                android:textAllCaps="false"
                android:textSize="@dimen/buttonTextSizeLarge" />

        </androidx.cardview.widget.CardView>

    </TableRow>
</TableLayout>