<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="?attr/sudoku_cell_not_selected" android:width="4px"/>
        </shape>
    </item>

    <item android:bottom="4px" android:left="4px" android:top="4px" android:right="4px">
        <shape android:shape="rectangle">
            <solid android:color="#fff"/>
            <stroke android:color="?attr/sudoku_cell_selected" android:width="2dp"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
</layer-list>
