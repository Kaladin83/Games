<resources>

    <style name="SummerHeat" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red2</item>
        <item name="colorPrimaryDark">@color/red1</item>
        <item name="colorAccent">@color/red2</item>

        <item name="controls_background_selected">@color/red2</item>
        <item name="controls_background_not_selected">@color/red3</item>
        <item name="kakuro_cell_background">@color/lightRedTransparent</item>
        <item name="sudoku_cell_selected">@color/red1</item>
        <item name="sudoku_cell_not_selected">@color/lightRedTransparent</item>
        <item name="sudoku_cell_text">@color/orange1</item>
        <item name="background_hint_color">@color/yellow2</item>

        <item name="android:windowBackground">@color/lightRedTransparent</item>
        <item name="android:fontFamily">@font/bonzai</item>
        <item name="android:textColorHighlight">@color/red1</item>

        <item name="buttonStyle">@style/ControlButton</item>
        <item name="sudoku_cell">@style/SudokuFrameStyle</item>
        <item name="kakuro_cell">@style/KakuroButtonStyle</item>
    </style>

    <style name="SpringBlossom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/green1</item>
        <item name="colorPrimaryDark">@color/green1</item>
        <item name="colorAccent">@color/green2</item>

        <item name="controls_background_selected">@color/green2</item>
        <item name="controls_background_not_selected">@color/yellow3</item>
        <item name="kakuro_cell_background">@color/greenTransparent</item>
        <item name="sudoku_cell_selected">@color/green1</item>
        <item name="sudoku_cell_not_selected">@color/greenTransparent</item>
        <item name="sudoku_cell_text">@color/blue2</item>
        <item name="background_hint_color">@color/blueTransparent</item>

        <item name="android:windowBackground">@color/greenTransparent</item>
        <item name="android:fontFamily">@font/kotta_one</item>

        <item name="buttonStyle">@style/ControlButton</item>
        <item name="sudoku_cell">@style/SudokuFrameStyle</item>
        <item name="kakuro_cell">@style/KakuroButtonStyle</item>
    </style>

    <style name="SummerHeatDialog">
        <item name="android:windowBackground">@color/lightRedTransparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:textColorHighlight">@color/red3</item>
    </style>

    <style name="SpringBlossomDialog">
        <item name="android:windowBackground">@color/greenTransparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:textColorHighlight">@color/green3</item>
    </style>

    <style name="ControlButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:fontFamily">@font/kotta_one</item>
    </style>

    <style name="SudokuFrameStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/md_sudoku_cell_selector</item>
        <item name="android:textColor">@color/cell_text</item>
        <item name="android:fontFamily">@font/kotta_one</item>
    </style>

    <style name="KakuroButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/md_kakuro_cell_selector</item>
        <item name="android:textColor">@color/blue1</item>
    </style>

    <style name="MenuButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:clickable">false</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:clickable">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>

</resources>
